@model IEnumerable<SistemaEstoque.ViewModels.VendaViewModel>
@{
    ViewData["Title"] = "Histórico de Vendas";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-clock-history"></i> Histórico de Vendas</h2>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-cart-plus"></i> Nova Venda
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Data Início</label>
                <input type="date" name="dataInicio" class="form-control" value="@ViewBag.DataInicio">
            </div>
            <div class="col-md-3">
                <label class="form-label">Data Fim</label>
                <input type="date" name="dataFim" class="form-control" value="@ViewBag.DataFim">
            </div>
            <div class="col-md-3">
                <label class="form-label">Cliente</label>
                <select name="clienteId" class="form-select">
                    <option value="">Todos os clientes</option>
                    @if (ViewBag.Clientes != null)
                    {
                        @foreach (var cliente in ViewBag.Clientes as List<SelectListItem>)
                        {
                            <option value="@cliente.Value" selected="@cliente.Selected">@cliente.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Funcionário</label>
                <select name="funcionarioId" class="form-select">
                    <option value="">Todos os funcionários</option>
                    @if (ViewBag.Funcionarios != null)
                    {
                        @foreach (var funcionario in ViewBag.Funcionarios as List<SelectListItem>)
                        {
                            <option value="@funcionario.Value" selected="@funcionario.Selected">@funcionario.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Resumo das Vendas -->
<div class="row mb-3">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total de Vendas</h6>
                        <h4>@ViewBag.TotalVendas</h4>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-receipt display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Faturamento</h6>
                        <h4>@($"R$ {ViewBag.FaturamentoTotal:N2}")</h4>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-cash-coin display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Ticket Médio</h6>
                        <h4>@($"R$ {ViewBag.TicketMedio:N2}")</h4>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-calculator display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Itens Vendidos</h6>
                        <h4>@ViewBag.ItensVendidos</h4>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-box-seam display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabela de Vendas -->
<div class="card">
    <div class="card-header">
        <h5><i class="bi bi-table"></i> Lista de Vendas</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Data/Hora</th>
                            <th>Cliente</th>
                            <th>Funcionário</th>
                            <th>Itens</th>
                            <th>Total</th>
                            <th>Pagamento</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var venda in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@venda.DataVenda.ToString("dd/MM/yyyy")</strong><br>
                                    <small class="text-muted">@venda.DataVenda.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(venda.ClienteNome))
                                    {
                                        <span>@venda.ClienteNome</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Cliente Avulso</span>
                                    }
                                </td>
                                <td>@venda.FuncionarioNome</td>
                                <td>
                                    <span class="badge bg-primary">@venda.Itens.Count itens</span>
                                </td>
                                <td>
                                    <strong class="text-success">R$ @venda.Total.ToString("N2")</strong>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@venda.FormaPagamento</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@venda.Id" 
                                           class="btn btn-sm btn-outline-info" 
                                           title="Ver Detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-success" 
                                                onclick="imprimirVenda(@venda.Id)"
                                                title="Imprimir">
                                            <i class="bi bi-printer"></i>
                                        </button>
                                        @if (venda.DataVenda.Date == DateTime.Today)
                                        {
                                            <a asp-action="Edit" asp-route-id="@venda.Id" 
                                               class="btn btn-sm btn-outline-warning"
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmarCancelamento(@venda.Id)"
                                                    title="Cancelar Venda">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-receipt display-1 text-muted"></i>
                <h4 class="mt-3">Nenhuma venda encontrada</h4>
                <p class="text-muted">Não há vendas registradas para os filtros selecionados.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-cart-plus"></i> Realizar Primeira Venda
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal de Confirmação -->
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Venda</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja cancelar esta venda?</p>
                <p class="text-warning"><strong>Atenção:</strong> O estoque dos produtos será restaurado.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                <form id="formCancelar" asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" id="vendaIdCancelar" name="id" value="">
                    <button type="submit" class="btn btn-danger">Sim, Cancelar Venda</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarCancelamento(vendaId) {
            document.getElementById('vendaIdCancelar').value = vendaId;
            new bootstrap.Modal(document.getElementById('modalCancelar')).show();
        }

        function imprimirVenda(vendaId) {
            // Abrir página de impressão em nova janela
            window.open(`/Vendas/Imprimir/${vendaId}`, '_blank', 'width=800,height=600');
        }

        // Auto-aplicar data de hoje se não houver filtros
        document.addEventListener('DOMContentLoaded', function() {
            const dataInicio = document.querySelector('input[name="dataInicio"]');
            const dataFim = document.querySelector('input[name="dataFim"]');
            
            if (!dataInicio.value && !dataFim.value) {
                const hoje = new Date().toISOString().split('T')[0];
                dataInicio.value = hoje;
                dataFim.value = hoje;
            }
        });
    </script>
}
