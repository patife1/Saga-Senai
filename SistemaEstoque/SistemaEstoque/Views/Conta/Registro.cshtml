@model SistemaEstoque.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center">
                <h4><i class="bi bi-person-plus"></i> Criar Conta</h4>
            </div>
            <div class="card-body">
                <form asp-action="Registro" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="seu@email.com">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="Mínimo 6 caracteres">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">
                            A senha deve conter pelo menos 6 caracteres, incluindo maiúsculas, minúsculas e números.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme sua senha">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="alert alert-info">
                        <small>
                            <i class="bi bi-info-circle"></i>
                            Ao criar uma conta, você receberá permissões de <strong>Funcionário</strong> por padrão.
                        </small>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-person-check"></i> Criar Conta
                        </button>
                    </div>
                </form>
                
                <hr>
                
                <div class="text-center">
                    <p>Já tem uma conta? 
                        <a asp-action="Login" class="text-decoration-none">
                            Faça login aqui
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
