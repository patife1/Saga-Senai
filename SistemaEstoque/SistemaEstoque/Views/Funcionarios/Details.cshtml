@model SistemaEstoque.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do Funcionário";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-fill"></i> Detalhes do Funcionário
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CPF)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.CPF)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefone)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cargo)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cargo)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Salario)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Salario)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataAdmissao)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.DataAdmissao)</dd>

                                @if (Model.DataDemissao.HasValue)
                                {
                                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataDemissao)</dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataDemissao)</dd>
                                }

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ativo)</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inativo</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.Vendas != null && Model.Vendas.Any())
                    {
                        <hr />
                        <h5><i class="bi bi-cart-fill"></i> Vendas Realizadas</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Valor Total</th>
                                        <th>Forma Pagamento</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var venda in Model.Vendas.OrderByDescending(v => v.DataVenda).Take(10))
                                    {
                                        <tr>
                                            <td>@venda.DataVenda.ToString("dd/MM/yyyy")</td>
                                            <td>@venda.ValorTotal.ToString("C")</td>
                                            <td>@venda.FormaPagamento</td>
                                            <td>
                                                @if (venda.Status == "Concluída")
                                                {
                                                    <span class="badge bg-success">@venda.Status</span>
                                                }
                                                else if (venda.Status == "Pendente")
                                                {
                                                    <span class="badge bg-warning">@venda.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@venda.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.Vendas.Count() > 10)
                            {
                                <p class="text-muted"><small>Mostrando as 10 vendas mais recentes de @Model.Vendas.Count() vendas totais.</small></p>
                            }
                        </div>
                    }

                    @if (Model.Servicos != null && Model.Servicos.Any())
                    {
                        <hr />
                        <h5><i class="bi bi-tools"></i> Serviços Realizados</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Tipo</th>
                                        <th>Cliente</th>
                                        <th>Valor</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var servico in Model.Servicos.OrderByDescending(s => s.DataServico).Take(10))
                                    {
                                        <tr>
                                            <td>@servico.DataServico.ToString("dd/MM/yyyy")</td>
                                            <td>@servico.TipoServico</td>
                                            <td>@(servico.Cliente?.Nome ?? "N/A")</td>
                                            <td>@servico.ValorServico.ToString("C")</td>
                                            <td>
                                                @if (servico.Status == "Concluído")
                                                {
                                                    <span class="badge bg-success">@servico.Status</span>
                                                }
                                                else if (servico.Status == "Em Andamento")
                                                {
                                                    <span class="badge bg-warning">@servico.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@servico.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.Servicos.Count() > 10)
                            {
                                <p class="text-muted"><small>Mostrando os 10 serviços mais recentes de @Model.Servicos.Count() serviços totais.</small></p>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Excluir
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar para Lista
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmação de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o funcionário <strong>@Model.Nome</strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Atenção:</strong> Esta ação não pode ser desfeita. O funcionário será marcado como inativo.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i> Cancelar
                </button>
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirmar Exclusão
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
