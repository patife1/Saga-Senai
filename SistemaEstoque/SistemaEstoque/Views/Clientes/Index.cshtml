@model IEnumerable<SistemaEstoque.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
    var searchString = ViewData["CurrentFilter"] as string;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-people"></i> Clientes</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Novo Cliente
            </a>
        </div>
    </div>
</div>

<!-- Busca -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Buscar cliente:</label>
                            <input type="text" name="searchString" value="@searchString" 
                                   class="form-control" placeholder="Nome, CPF ou e-mail">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-clockwise"></i> Limpar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Contato</th>
                                    <th>Data Cadastro</th>
                                    <th>Compras</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cliente in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@cliente.Nome</strong>
                                            @if (!string.IsNullOrEmpty(cliente.Endereco))
                                            {
                                                <br><small class="text-muted">@cliente.Endereco</small>
                                            }
                                        </td>
                                        <td>@(cliente.CPF ?? "Não informado")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(cliente.Email))
                                            {
                                                <i class="bi bi-envelope"></i> @cliente.Email<br>
                                            }
                                            @if (!string.IsNullOrEmpty(cliente.Telefone))
                                            {
                                                <i class="bi bi-telephone"></i> @cliente.Telefone
                                            }
                                        </td>
                                        <td>@cliente.DataCadastro.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge bg-info">@cliente.Vendas.Count</span>
                                        </td>
                                        <td>
                                            @if (cliente.Ativo)
                                            {
                                                <span class="badge bg-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inativo</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@cliente.Id" 
                                                   class="btn btn-outline-info btn-sm" title="Detalhes">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Historico" asp-route-id="@cliente.Id" 
                                                   class="btn btn-outline-primary btn-sm" title="Histórico">
                                                    <i class="bi bi-clock-history"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@cliente.Id" 
                                                   class="btn btn-outline-warning btn-sm" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@cliente.Id" 
                                                   class="btn btn-outline-danger btn-sm" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Estatísticas -->
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count()</h5>
                                    <small>Total de Clientes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count(c => c.Ativo)</h5>
                                    <small>Clientes Ativos</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Sum(c => c.Vendas.Count)</h5>
                                    <small>Total de Compras</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h5>@Model.Where(c => c.Vendas.Any()).Count()</h5>
                                    <small>Compraram Alguma Vez</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-people display-1 text-muted"></i>
                        <h4 class="text-muted mt-3">Nenhum cliente encontrado</h4>
                        @if (!string.IsNullOrEmpty(searchString))
                        {
                            <p class="text-muted">Não foram encontrados clientes com o termo "@searchString".</p>
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-clockwise"></i> Limpar Busca
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">Cadastre o primeiro cliente para começar.</p>
                        }
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Novo Cliente
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
