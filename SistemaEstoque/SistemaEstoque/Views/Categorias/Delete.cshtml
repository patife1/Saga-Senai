@model SistemaEstoque.Models.Categoria
@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-trash"></i> Excluir Categoria</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>

<div class="alert alert-warning">
    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Confirmação de Exclusão</h5>
    <p>Tem certeza que deseja excluir esta categoria?</p>
    <hr>
    <p class="mb-0">Esta ação desativará a categoria, mantendo o histórico no sistema.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Dados da Categoria</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8"><strong>@Model.Nome</strong></dd>
                    
                    <dt class="col-sm-4">Descrição:</dt>
                    <dd class="col-sm-8">@(Model.Descricao ?? "Sem descrição")</dd>
                    
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inativo</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Data Cadastro:</dt>
                    <dd class="col-sm-8">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Produtos Associados:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Produtos.Count</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        @if (Model.Produtos.Any())
        {
            <div class="card border-warning">
                <div class="card-header bg-warning">
                    <h6><i class="bi bi-exclamation-triangle"></i> Atenção: Produtos Associados</h6>
                </div>
                <div class="card-body">
                    <p>Esta categoria possui <strong>@Model.Produtos.Count produto(s)</strong> associado(s):</p>
                    <ul class="list-group list-group-flush">
                        @foreach (var produto in Model.Produtos.Take(5))
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @produto.Nome
                                <span class="badge bg-secondary">@produto.QuantidadeEstoque un.</span>
                            </li>
                        }
                        @if (Model.Produtos.Count > 5)
                        {
                            <li class="list-group-item text-muted">
                                ... e mais @(Model.Produtos.Count - 5) produto(s)
                            </li>
                        }
                    </ul>
                    <div class="mt-3">
                        <small class="text-muted">
                            A exclusão desta categoria não afetará os produtos, mas eles ficarão sem categoria.
                        </small>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h6><i class="bi bi-check-circle"></i> Seguro para Exclusão</h6>
                </div>
                <div class="card-body">
                    <p>Esta categoria não possui produtos associados.</p>
                    <p class="text-success mb-0">
                        <i class="bi bi-shield-check"></i> Exclusão pode ser realizada com segurança.
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary me-md-2">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-md-2">
                    <i class="bi bi-eye"></i> Ver Detalhes
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>
