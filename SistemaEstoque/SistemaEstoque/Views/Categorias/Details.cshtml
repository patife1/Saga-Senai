@model SistemaEstoque.Models.Categoria
@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-eye"></i> Detalhes da Categoria</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Informações Gerais</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8"><strong>@Model.Nome</strong></dd>
                    
                    <dt class="col-sm-4">Descrição:</dt>
                    <dd class="col-sm-8">@(Model.Descricao ?? "Sem descrição")</dd>
                    
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inativo</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-4">Data Cadastro:</dt>
                    <dd class="col-sm-8">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
                    
                    <dt class="col-sm-4">Total de Produtos:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Produtos.Count</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-box-seam"></i> Produtos da Categoria</h5>
            </div>
            <div class="card-body">
                @if (Model.Produtos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Estoque</th>
                                    <th>Preço</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var produto in Model.Produtos.Take(10))
                                {
                                    <tr>
                                        <td>@produto.Nome</td>
                                        <td>
                                            @if (produto.QuantidadeEstoque <= produto.EstoqueMinimo)
                                            {
                                                <span class="badge bg-danger">@produto.QuantidadeEstoque</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@produto.QuantidadeEstoque</span>
                                            }
                                        </td>
                                        <td>@produto.PrecoVenda.ToString("C")</td>
                                        <td>
                                            @if (produto.Ativo)
                                            {
                                                <i class="bi bi-check-circle text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle text-danger"></i>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.Produtos.Count > 10)
                    {
                        <p class="text-muted">Mostrando 10 de @Model.Produtos.Count produtos.</p>
                    }
                }
                else
                {
                    <p class="text-muted">Nenhum produto cadastrado nesta categoria.</p>
                    <a asp-controller="Produtos" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Adicionar Produto
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-md-2">
                <i class="bi bi-pencil"></i> Editar Categoria
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-md-2">
                <i class="bi bi-trash"></i> Excluir
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-list"></i> Lista de Categorias
            </a>
        </div>
    </div>
</div>
