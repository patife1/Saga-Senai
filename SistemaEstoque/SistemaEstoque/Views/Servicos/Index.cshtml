@model IEnumerable<SistemaEstoque.Models.Servico>

@{
    ViewData["Title"] = "Serviços";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-tools"></i> Gerenciamento de Serviços
                        </h4>
                        <a asp-action="Create" class="btn btn-light btn-sm">
                            <i class="bi bi-plus"></i> Novo Serviço
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> <strong>@Model.Count()</strong> serviço(s) encontrado(s)
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Tipo de Serviço</th>
                                        <th>Cliente</th>
                                        <th>Funcionário</th>
                                        <th>Data</th>
                                        <th>Status</th>
                                        <th>Valor</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.TipoServico</strong>
                                                @if (!string.IsNullOrEmpty(item.Descricao))
                                                {
                                                    <br><small class="text-muted">@(item.Descricao.Length > 50 ? item.Descricao.Substring(0, 50) + "..." : item.Descricao)</small>
                                                }
                                            </td>
                                            <td>
                                                <i class="bi bi-person"></i>
                                                @(item.Cliente?.Nome ?? "N/A")
                                            </td>
                                            <td>
                                                <i class="bi bi-person-badge"></i>
                                                @(item.Funcionario?.Nome ?? "N/A")
                                            </td>
                                            <td>
                                                <i class="bi bi-calendar"></i>
                                                @item.DataServico.ToString("dd/MM/yyyy")
                                                <br><small class="text-muted">@item.DataServico.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (item.Status == "Concluído")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle"></i> @item.Status
                                                    </span>
                                                }
                                                else if (item.Status == "Em Andamento")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-clock"></i> @item.Status
                                                    </span>
                                                }
                                                else if (item.Status == "Cancelado")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle"></i> @item.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-calendar-event"></i> @item.Status
                                                    </span>
                                                }
                                            </td>
                                            <td class="fw-bold text-success">
                                                @item.ValorServico.ToString("C")
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="card border-0">
                                <div class="card-body">
                                    <i class="bi bi-tools text-muted" style="font-size: 4rem;"></i>
                                    <h4 class="mt-3 text-muted">Nenhum serviço encontrado</h4>
                                    <p class="text-muted">Comece cadastrando o primeiro serviço da sua empresa.</p>
                                    <a asp-action="Create" class="btn btn-info">
                                        <i class="bi bi-plus"></i> Cadastrar Novo Serviço
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Buscar serviços..." id="busca">
                                    <button class="btn btn-outline-secondary" type="button">Buscar</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select">
                                    <option value="">Todos os Status</option>
                                    <option value="Agendado">Agendado</option>
                                    <option value="Em Andamento">Em Andamento</option>
                                    <option value="Concluído">Concluído</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <a asp-action="Create" class="btn btn-success">
                                    <i class="bi bi-plus"></i> Novo Serviço
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
