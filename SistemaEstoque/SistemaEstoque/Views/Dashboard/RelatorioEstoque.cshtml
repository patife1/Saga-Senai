@model IEnumerable<SistemaEstoque.Models.Produto>
@{
    ViewData["Title"] = "Relatório de Estoque";
    var valorTotalEstoque = ViewData["ValorTotalEstoque"];
    var produtosEstoqueBaixo = ViewData["ProdutosEstoqueBaixo"];
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-boxes me-2"></i>Relatório de Estoque
                    </h4>
                    <div>
                        <button onclick="window.print()" class="btn btn-dark btn-sm me-2">
                            <i class="fas fa-print me-1"></i>Imprimir
                        </button>
                        <a href="@Url.Action("Relatorios", "Dashboard")" class="btn btn-outline-dark btn-sm">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Resumo do Estoque -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Total de Produtos</h5>
                                    <h3 class="card-text">@Model.Count()</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Valor Total do Estoque</h5>
                                    <h3 class="card-text">@((decimal?)valorTotalEstoque ?? 0).ToString("C")</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Produtos em Falta</h5>
                                    <h3 class="card-text">@(produtosEstoqueBaixo ?? 0)</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabela de Produtos -->
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Código</th>
                                        <th>Produto</th>
                                        <th>Categoria</th>
                                        <th class="text-center">Qtd. Estoque</th>
                                        <th class="text-center">Estoque Mín.</th>
                                        <th class="text-end">Preço Compra</th>
                                        <th class="text-end">Preço Venda</th>
                                        <th class="text-end">Valor Total</th>
                                        <th class="text-center">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produto in Model.OrderBy(p => p.Categoria.Nome).ThenBy(p => p.Nome))
                                    {
                                        var valorTotalProduto = produto.QuantidadeEstoque * produto.PrecoCompra;
                                        var estoqueStatus = produto.QuantidadeEstoque <= produto.EstoqueMinimo ? "Baixo" : "Normal";
                                        var statusClass = produto.QuantidadeEstoque <= produto.EstoqueMinimo ? "table-danger" : "";
                                        
                                        <tr class="@statusClass">
                                            <td>@produto.CodigoBarras</td>
                                            <td>
                                                <strong>@produto.Nome</strong>
                                                @if (!string.IsNullOrEmpty(produto.Descricao))
                                                {
                                                    <br><small class="text-muted">@produto.Descricao</small>
                                                }
                                            </td>
                                            <td>@produto.Categoria.Nome</td>
                                            <td class="text-center">
                                                <span class="badge @(produto.QuantidadeEstoque <= produto.EstoqueMinimo ? "bg-danger" : "bg-success")">
                                                    @produto.QuantidadeEstoque
                                                </span>
                                            </td>
                                            <td class="text-center">@produto.EstoqueMinimo</td>
                                            <td class="text-end">@produto.PrecoCompra.ToString("C")</td>
                                            <td class="text-end">@produto.PrecoVenda.ToString("C")</td>
                                            <td class="text-end"><strong>@valorTotalProduto.ToString("C")</strong></td>
                                            <td class="text-center">
                                                @if (produto.QuantidadeEstoque <= produto.EstoqueMinimo)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>Baixo
                                                    </span>
                                                }
                                                else if (produto.QuantidadeEstoque <= produto.EstoqueMinimo * 2)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-exclamation-circle me-1"></i>Atenção
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Normal
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-secondary">
                                    <tr>
                                        <th colspan="7" class="text-end">Valor Total do Estoque:</th>
                                        <th class="text-end">@((decimal?)valorTotalEstoque ?? 0).ToString("C")</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }

                    <!-- Produtos com Estoque Baixo -->
                    @{
                        var produtosBaixoEstoque = Model.Where(p => p.QuantidadeEstoque <= p.EstoqueMinimo).ToList();
                    }
                    
                    @if (produtosBaixoEstoque.Any())
                        {
                            <div class="mt-4">
                                <div class="alert alert-danger">
                                    <h5><i class="fas fa-exclamation-triangle me-2"></i>Atenção - Produtos com Estoque Baixo</h5>
                                    <div class="row">
                                        @foreach (var produto in produtosBaixoEstoque.Take(10))
                                        {
                                            <div class="col-md-6">
                                                <div class="d-flex justify-content-between">
                                                    <span><strong>@produto.Nome</strong></span>
                                                    <span class="badge bg-danger">@produto.QuantidadeEstoque unidades</span>
                                                </div>
                                            </div>
                                        }
                                        @if (produtosBaixoEstoque.Count > 10)
                                        {
                                            <div class="col-12 mt-2">
                                                <small class="text-muted">... e mais @(produtosBaixoEstoque.Count - 10) produtos com estoque baixo.</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <i class="fas fa-info-circle fa-2x mb-3"></i>
                            <h5>Nenhum produto encontrado</h5>
                            <p>Não há produtos cadastrados no sistema.</p>
                            <a href="@Url.Action("Create", "Produtos")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Cadastrar Produto
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-danger {
        background-color: rgba(220, 53, 69, 0.1) !important;
    }
</style>
