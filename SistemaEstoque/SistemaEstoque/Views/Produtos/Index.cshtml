@model IEnumerable<SistemaEstoque.Models.Produto>
@{
    ViewData["Title"] = "Produtos";
    var searchString = ViewData["CurrentFilter"] as string;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-box-seam"></i> Produtos</h2>
            <div>
                <a asp-action="EstoqueBaixo" class="btn btn-warning me-2">
                    <i class="bi bi-exclamation-triangle"></i> Estoque Baixo
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Produto
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Buscar produto:</label>
                            <input type="text" name="searchString" value="@searchString" 
                                   class="form-control" placeholder="Nome ou descrição do produto">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Categoria:</label>
                            @Html.DropDownList("CategoriaId", ViewBag.CategoriaId as SelectList, 
                                "Todas as categorias", new { @class = "form-select" })
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-clockwise"></i> Limpar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Produto</th>
                                    <th>Categoria</th>
                                    <th>Estoque</th>
                                    <th>Preço Compra</th>
                                    <th>Preço Venda</th>
                                    <th>Margem</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var produto in Model)
                                {
                                    var margem = produto.PrecoVenda > 0 ? ((produto.PrecoVenda - produto.PrecoCompra) / produto.PrecoVenda * 100) : 0;
                                    <tr>
                                        <td>
                                            <strong>@produto.Nome</strong>
                                            @if (!string.IsNullOrEmpty(produto.CodigoBarras))
                                            {
                                                <br><small class="text-muted">@produto.CodigoBarras</small>
                                            }
                                        </td>
                                        <td>@produto.Categoria.Nome</td>
                                        <td>
                                            @if (produto.QuantidadeEstoque <= produto.EstoqueMinimo)
                                            {
                                                <span class="badge bg-danger" title="Estoque baixo!">
                                                    @produto.QuantidadeEstoque
                                                </span>
                                                <small class="text-danger">
                                                    <br>Min: @produto.EstoqueMinimo
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@produto.QuantidadeEstoque</span>
                                                <small class="text-muted">
                                                    <br>Min: @produto.EstoqueMinimo
                                                </small>
                                            }
                                        </td>
                                        <td>@produto.PrecoCompra.ToString("C")</td>
                                        <td>@produto.PrecoVenda.ToString("C")</td>
                                        <td>
                                            <span class="badge bg-@(margem >= 30 ? "success" : margem >= 15 ? "warning" : "danger")">
                                                @margem.ToString("F1")%
                                            </span>
                                        </td>
                                        <td>
                                            @if (produto.Ativo)
                                            {
                                                <span class="badge bg-success">Ativo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inativo</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@produto.Id" 
                                                   class="btn btn-outline-info btn-sm" title="Detalhes">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@produto.Id" 
                                                   class="btn btn-outline-warning btn-sm" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@produto.Id" 
                                                   class="btn btn-outline-danger btn-sm" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Resumo -->
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count()</h5>
                                    <small>Total de Produtos</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Count(p => p.QuantidadeEstoque <= p.EstoqueMinimo)</h5>
                                    <small>Estoque Baixo</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Sum(p => p.QuantidadeEstoque)</h5>
                                    <small>Total em Estoque</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h5>@Model.Sum(p => p.QuantidadeEstoque * p.PrecoCompra).ToString("C")</h5>
                                    <small>Valor do Estoque</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-box-seam display-1 text-muted"></i>
                        <h4 class="text-muted mt-3">Nenhum produto encontrado</h4>
                        @if (!string.IsNullOrEmpty(searchString))
                        {
                            <p class="text-muted">Tente refinar sua busca ou limpar os filtros.</p>
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="bi bi-arrow-clockwise"></i> Limpar Filtros
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">Clique no botão "Novo Produto" para adicionar o primeiro produto.</p>
                        }
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Novo Produto
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
