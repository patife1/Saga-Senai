@model SistemaEstoque.Models.Produto
@{
    ViewData["Title"] = "Excluir Produto";
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="alert alert-warning">
    <strong>Atenção!</strong> Tem certeza que deseja excluir o produto abaixo?
</div>
<div>
    <h4>Produto</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Categoria</dt>
        <dd class="col-sm-10">@Model.Categoria?.Nome</dd>
    <dt class="col-sm-2">Preço de Venda</dt>
    <dd class="col-sm-10">@(Model.PrecoVenda.ToString("C2"))</dd>
        <dt class="col-sm-2">Estoque</dt>
        <dd class="col-sm-10">@Model.QuantidadeEstoque</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
